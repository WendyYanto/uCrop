<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Text View -->
    <style name="UcropGdnTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UcropGdnTextView.Title2">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/source_sans_pro_medium</item>
        <item name="android:textSize">@dimen/ucrop_sp_18</item>
        <item name="lineHeight">@dimen/ucrop_sp_22</item>
    </style>

    <style name="UcropGdnTextView.Title2.BlackHigh" parent="UcropGdnTextView.Title2">
        <item name="android:textColor">@color/ucrop_black_high_DE000000</item>
    </style>

    <style name="UcropGdnTextView.Title2.Blue" parent="UcropGdnTextView.Title2">
        <item name="android:textColor">@color/ucrop_blue_0095DA</item>
    </style>

    <style name="UcropGdnTextView.Subtitle2">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/source_sans_pro_medium</item>
        <item name="android:textSize">@dimen/ucrop_sp_14</item>
        <item name="lineHeight">@dimen/ucrop_sp_18</item>
    </style>

    <style name="UcropGdnTextView.Subtitle2.BlackHigh" parent="UcropGdnTextView.Subtitle2">
        <item name="android:textColor">@color/ucrop_black_high_DE000000</item>
    </style>

    <style name="UcropGdnTextView.Subtitle2.BlackDisabled" parent="UcropGdnTextView.Subtitle2">
        <item name="android:textColor">@color/ucrop_black_disabled_2E000000</item>
    </style>

    <style name="UcropGdnTextView.Subtitle2.Blue" parent="UcropGdnTextView.Subtitle2">
        <item name="android:textColor">@color/ucrop_blue_0095DA</item>
    </style>

    <style name="UcropGdnTextView.Subtitle2.Red" parent="UcropGdnTextView.Subtitle2">
        <item name="android:textColor">@color/ucrop_red_F04242</item>
    </style>

    <style name="UcropGdnTextView.BodyText2">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/source_sans_pro_regular</item>
        <item name="android:textSize">@dimen/ucrop_sp_14</item>
        <item name="lineHeight">@dimen/ucrop_sp_18</item>
    </style>

    <style name="UcropGdnTextView.BodyText2.BlackMedium">
        <item name="android:textColor">@color/ucrop_black_medium_99000000</item>
    </style>

    <style name="UcropGdnTextView.Label">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/source_sans_pro_medium</item>
        <item name="android:textSize">@dimen/ucrop_dp_12</item>
        <item name="lineHeight">@dimen/ucrop_sp_16</item>
    </style>

    <style name="UcropGdnTextView.Label.BlackLow">
        <item name="android:textColor">@color/ucrop_black_low_61000000</item>
    </style>

    <!-- Toolbar -->
    <style name="UcropGdnToolbar.White" parent="UcropGdnToolbar">
        <item name="android:background">@color/ucrop_white_FFFFFF</item>
        <item name="android:textColor">@color/ucrop_black_high_DE000000</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/ucrop_dp_4</item>
        <item name="titleTextAppearance">@style/UcropGdnTextView.Title2.BlackHigh</item>
        <item name="subtitleTextAppearance">@style/UcropGdnTextView.Subtitle2.BlackHigh</item>
    </style>

    <style name="UcropToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/ucrop_white_FFFFFF</item>
        <item name="android:textColorSecondary">@color/ucrop_white_FFFFFF</item>
        <item name="android:textColor">@color/ucrop_white_FFFFFF</item>
    </style>

    <style name="UcropGdnToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/UcropToolbarTheme</item>
    </style>
</resources>